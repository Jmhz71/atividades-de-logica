Var
// Seção de Declarações das variáveis
n1:real
n2:real
operacao:caracter
resultado:real

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc...
escreval ("digite o numero 1")
leia(n1)
escreval ("digite o numero 2")
leia(n2)
 escreval ("digite a operacao desejada")
 leia(operacao)

 escolha operacao

caso "+"
 resultado <- n1 + n2
 caso "-"
 resultado <- n1 - n2
 caso "*"
 resultado <- n1 * n2
 caso "/"
 resultado <- n1 / n2
 outrocaso
 fimescolha

 escreva ("resultado:" ,resultado)



